<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Dojo number </title>
    </head>
    <body>
        <h1><%= @dojo['branch'] %> </h1>
        <h3>Address: <%= @dojo['street'] %></h3>
        <h3>City: <%= @dojo['city'] %> State: <%= @dojo['state'] %></h3>
        <h2>Student Roster</h2>
        <table>
            <th><tr><td>First Name</td><td>Last Name</td><td>Email</td><td>Actions</td></tr></th>
            <% @students.each do |student| %>
            <tr>
                <td><%= student["first_name"] %></td>
                <td><%= student['last_name'] %></td>
                <td><%= student['email'] %></td>
                <td><a href="/dojos/<%= @dojo['id'] %>/students/<%= student['id'] %>">Show| </a><a href="/dojos/<%= @dojo['id'] %>/students/<%= student['id'] %>/edit">Edit| </a><a href="/dojos/<%= @dojo['id'] %>/students/<%= student['id'] %>/destroy">Destroy</a></td>
            </tr>
            <% end %>
        </table>
        <a href="/">Home | </a><a href="/dojos/<%= @dojo['id'] %>/edit">Edit </a>
        <br>
        <a href="/dojos/<%= @dojo['id'] %>/students/new">Add Student</a>
    </body>
</html>